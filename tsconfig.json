{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "CommonJS",                      
    "rootDir": "./src",                        
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                    
    "strict": false,                            
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true   
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
